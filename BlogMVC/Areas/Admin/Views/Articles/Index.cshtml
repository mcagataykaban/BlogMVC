@model List<Article>
@{
    ViewBag.Title = "Index";
}



<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Yazılarım</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Ayar</th>
                        <th>Yazı Başlığı</th>
                        <th>Yorum Sayısı</th>
                        <th>Kategoriler</th>
                    </tr>
                </thead>
              
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a class="btn-sm btn-warning btn-circle" href="@Url.Action("EditArticle","Articles", new { id = item.Id })"><i class="fas fa-edit"></i></a>
                                <a class="btn-sm btn-danger btn-circle ml-2" href="@Url.Action("Delete","Articles", new { id = item.Id })"><i class="fas fa-trash"></i></a>
                            </td>
                            <td>@item.ArticleTitle</td>
                            <td>@item.Comments.Count</td>
                            <td>@item.Category.CategoryName</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $("#dataTable").DataTable();
    </script>
}

